<!-- We should probably treat this like a micro-blog, show date - title - content (maybe auto-collapse box) -->

<div class="centered-index">
    <h1>Thoughts <a class="rss-icon" href="./feed.rss">&nbsp</a></h2>
    <ul>
        {% for mypost in search.pages("type=thought", "date=desc") %}
            <li>
                <a href="{{ mypost.url }}">{{ mypost.date | date('HUMAN_DATE') }} - {{ mypost.title }}</a>
                <p>{{ mypost.description | safe }}</p>
            </li>
        {% endfor %}
    </ul>
</div>